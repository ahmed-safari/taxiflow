# Custom Airflow image with Docker CLI installed
# This allows the Airflow worker to run docker exec commands
FROM apache/airflow:2.10.2

USER root

# Install Docker CLI
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        docker.io \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

USER airflow
